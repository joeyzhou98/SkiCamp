<% include ../partials/header %>

<div>
    <div class="row">
        <h1 style="text-align: center;">Edit <%= skiground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/skigrounds/<%= skiground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="skiground[name]" id="name" value="<%= skiground.name %>">
                </div>
                <div class="form-group">
                    <label for="price">Price per day</label>
                    <input class="form-control" type="number" name="skiground[price]" id="price" value="<%= skiground.price %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" name="skiground[image]" id="image" value="<%= skiground.image %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="skiground[description]" id="description" value="<%= skiground.description %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= skiground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
                </div>
            </form>
            <a href="/skigrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
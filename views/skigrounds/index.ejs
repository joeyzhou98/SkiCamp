<% include ../partials/header %>

<div>
    
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to SkiCamp!</h1>
            <p>View the hand-picked skigrounds from all over the world</p>
            <p>        
                <a class="btn btn-primary btn-lg" href="/skigrounds/new">Add New Skiground</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% skigrounds.forEach(function(skiground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                     <img src="<%= skiground.image %>">
                     <div class="caption">
                        <h4><%= skiground.name %></h4>
                     </div>
                     <p>
                         <a class="btn btn-primary" href="/skigrounds/<%= skiground._id %>">More Info</a>
                     </p>
                </div>
            </div>
        <% }); %>
    </div>
    
</div>

<% include ../partials/footer %>